    };
}

<div class="container" style="text-align: center">
    <div class="socialMedia-icons">
        @foreach (var SocialMediaCompany in SocialMediaCompanies)
        {
            <div>
                <button onclick="window.open('@SocialMediaCompany.HomeURL', '_blank')">
                    <img class="button-icon"
                         src="/images/social_media/160_160/@(SocialMediaCompany.Prefix)_black.png"
                         alt="@SocialMediaCompany.Name"
                         onMouseOver="this.src='/images/social_media/160_160/@(SocialMediaCompany.Prefix)_white.png';"
                         onMouseOut="this.src='/images/social_media/160_160/@(SocialMediaCompany.Prefix)_black.png';"
                         onclick="getOutboundLink('@SocialMediaCompany.HomeURL'); return false;" />
                </button>
            </div>
        }
    </div>
</div>

<div>&nbsp;</div>

<!-- Copyright and Privacy -->
<div class="border-top text-muted">
    <div class="container">
        <div style="text-align: center">
            &copy;&nbsp;@System.DateTime.Now.Year&nbsp;-&nbsp;nicetranslady<!-- | <a asp-area="" asp-page="/Privacy">Privacy</a> -->
